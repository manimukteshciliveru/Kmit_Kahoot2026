# Production Environment Variables

# App
PORT=5000
NODE_ENV=production
CLIENT_URL=https://quizmaster.com
JWT_SECRET=your_super_secret_jwt_key_here

# MongoDB
MONGO_INITDB_ROOT_USERNAME=mongoadmin
MONGO_INITDB_ROOT_PASSWORD=your_strong_mongo_password
MONGODB_URI=mongodb://mongoadmin:your_strong_mongo_password@mongo1:27017,mongo2:27017,mongo3:27017/quizmaster?authSource=admin&replicaSet=rs0

# Redis
REDIS_PASSWORD=your_strong_redis_password
REDIS_SENTINEL_PASSWORD=your_strong_redis_password
REDIS_URL=redis://:your_strong_redis_password@redis-master:6379

# Nginx
SSL_DOMAIN=quizmaster.com
SSL_EMAIL=admin@quizmaster.com
